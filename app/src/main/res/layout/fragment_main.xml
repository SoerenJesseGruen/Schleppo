<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_content_margin"
    tools:context="fragments.MainFragment"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center" >

        <ImageButton
            app:srcCompat="@mipmap/ic_profil1"
            android:padding="10dp"
            android:id="@+id/imageButton_Profile"
            android:contentDescription="@string/menu_profil"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/com_parse_ui_parse_login_button_background_selector" />

        <ImageButton
            app:srcCompat="@mipmap/ic_map"
            android:padding="10dp"
            android:id="@+id/imageButton_Map"
            android:contentDescription="@string/menu_map"
            android:layout_width="180dp"
            android:background="@drawable/com_parse_ui_parse_login_button_background_selector"
            android:layout_height="180dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center" >

        <ImageButton
            app:srcCompat="@mipmap/ic_warning"
            android:padding="10dp"
            android:id="@+id/imageButton_Warning"
            android:contentDescription="@string/menu_warnDriver"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/com_parse_ui_parse_login_button_background_selector" />

        <ImageButton
            android:layout_width="180dp"
            app:srcCompat="@mipmap/ic_profile"
            android:padding="10dp"
            android:id="@+id/imageButton_Messages"
            android:contentDescription="@string/menu_messages"
            android:background="@drawable/com_parse_ui_parse_login_button_background_selector"
            android:layout_height="180dp" />

    </LinearLayout>
</LinearLayout>