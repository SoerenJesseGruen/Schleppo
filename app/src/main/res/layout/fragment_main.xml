<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_content_margin"
    tools:context="fragments.MainFragment"
    android:orientation="vertical"
    android:layout_gravity="center" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center" >

        <ImageButton
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageButton_Profile"
            android:contentDescription="Profil" />

        <ImageButton
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            app:srcCompat="@android:drawable/ic_dialog_map"
            android:id="@+id/imageButton_Map"
            android:contentDescription="Karte" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center" >

        <ImageButton
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            app:srcCompat="@android:drawable/ic_dialog_alert"
            android:id="@+id/imageButton_Warning"
            android:contentDescription="Warnung" />

        <ImageButton
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            app:srcCompat="@android:drawable/ic_dialog_email"
            android:id="@+id/imageButton_Messages"
            android:contentDescription="Nachrichten" />

    </LinearLayout>
</LinearLayout>